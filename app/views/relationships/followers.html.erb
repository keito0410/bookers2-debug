<div class="container">
	<h2>Follower Users</h2>
	<!--users一覧 -->
	  <table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @user.followers.each do |follower| %>
			<tr>
				<td><%= attachment_image_tag(follower, :profile_image, fallback: "no-image-mini.jpg", size: "50x50") %></td>
				<td><%= follower.name%></td>
				<td>フォロー:<%= @user.followings.count %></td>
				<td>フォロワー:<%= @user.followers.count %></td>
				<td><%= render 'relationships/follow_button', user: follower %></td>
				<td><%= link_to "Show", follower, class: "user_#{follower.id}" %></td>
			</tr>
			<% end %>
		</tbody>
	  </table>
	<!--users一覧 -->
  </div>


