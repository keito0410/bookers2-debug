<%= form_for(book) do |f| %>
<% if book.errors.any? %>
	<h3><%= book.errors.count %>error occurrence</h3>
	<ul>
		<% book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<h2>New book</h2>
	<div class="field row">
		<label>title</label>
		<%= f.text_field :title, class: "col-xs-12 book_title" %>
	</div>

	<div class="field row">
		<label>body</label>
		<%= f.text_area :body, class: "col-xs-12 book_body" %>
	</div>

	<div class="actions row">
		<%= f.submit class: "btn btn-primary col-xs-12" %>
	</div>
<% end %>