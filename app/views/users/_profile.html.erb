<h2>User info</h2>
<table class="table">
		<tr><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "100x100" %></tr>

		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>

		<tr>
			<th>follows</th>
			<th><%= link_to user_follows_path(@user) do %><%= @user.followings.count %><% end %></th>
		</tr>

		<tr>
			<th>follower</th>
			<th><%= link_to user_followers_path(@user) do %><%= @user.reverse_of_relationships.count %><% end %></th>
		</tr>
</table>

<div class="row">
	<%= link_to '',edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>