<div class="row">
  <div class="col-xs-3">
	<%= render 'users/profile', user: @user %><br>
	<%= render 'relationships/follow_button', user: @user %>
  <% if @user.id != current_user.id %>
  <%= link_to 'チャットをする', chat_path_url %>
<!--同コントローラーのviewで表示ならusersは省略可 -->
	<%= render 'books/newform', book: @book %>
  <% end %>
  </div>
  <div class="col-xs-9">
    <h2>Books</h2>
<!--books一覧 -->
      <table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td>
					<%= link_to (book.user) do %>
					<%= attachment_image_tag(book.user, :profile_image, fallback: "no-image-mini.jpg", size: "50x50") %>
					<% end %>
				</td>
				<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
				<td><%= book.body %></td>
			</tr>
			<% end %>
		</tbody>
	  </table>
  </div>
</div>

<!--Google Map 表示 -->
<script type="text/javascript">
  function initMap() {
// #latitude,longitudeから位置を特定
    var test ={lat: <%= current_user.latitude %>, lng: <%= current_user.longitude %>};
    var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 15, 
              center: test
              });
    var transitLayer = new google.maps.TransitLayer();
    transitLayer.setMap(map);

    var contentString = '住所：<%= current_user.address_city %>';
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });

 // #Map上の指定した位置にピンを挿して表示する
    var marker = new google.maps.Marker({
                  position:test,
                  map: map,
                  title: contentString
                 });

     marker.addListener('click', function() {
       infowindow.open(map, marker);
     });
  }
</script>

<!-- #以下の記述の中にあるYOUR_API_KEYには取得したご自身のAPIキーを記述してください -->
